---
{% if ocp_cloud_provider_name != 'other' %}
apiVersion: poolboy.gpte.redhat.com/v1
kind: ResourceClaim
metadata:
  name: {{ governor_name }}-{{ project_id }}
spec:
  resources:
  - template:
      apiVersion: anarchy.gpte.redhat.com/v1
      kind: AnarchySubject
      metadata:
        annotations:
          poolboy.gpte.redhat.com/resource-provider-name: babylon
        generateName: {{ governor_name }}-{{ claim_postfix }}
        labels:
          governor: {{ governor_name }} 
      spec:
        governor: {{ governor_name }} 
        vars:
          job_vars:
            {{ claim_content }}
{% endif %}
